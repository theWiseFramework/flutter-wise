{
  "name": "flutter-wise",
  "displayName": "Flutter Wise",
  "description": "Tools to make vscode a full flutter ide",
  "version": "0.0.1",
  "publisher": "wiseframework",
  "repository": {
    "type": "git",
    "url": "https://github.com/theWiseFramework/flutter-wise"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "theme",
    "flutter"
  ],
  "activationEvents": [
    "onCommand:flutterWise.initWorkspace",
    "onCommand:flutterWise.undoWorkspaceInit"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Flutter Wise Dark Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/flutter-wise-dark-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "flutter-wise-icons",
        "label": "Flutter Wise Icons",
        "path": "./themes/flutter-wise-icons.json",
        "_watch": true
      }
    ],
    "commands": [
      {
        "command": "flutterWise.initWorkspace",
        "title": "Flutter Wise: Setup Workspace"
      },
      {
        "command": "flutterWise.undoWorkspaceInit",
        "title": "Flutter Wise: Undo Workspace Setup"
      },
      {
        "command": "flutterWise.createModule",
        "title": "Flutter Wise: Create Flutter Module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "flutterWise.createModule",
          "group": "flutterWise@1",
          "when": "explorerResourceIsFolder && resourceFilename == modules"
        }
      ]
    },
    "configuration": {
      "title": "Flutter Wise",
      "properties": {
        "flutterWise.initialized": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Whether Flutter Wise has initialized this workspace."
        },
        "flutterWise.autoExcludeGeneratedFiles": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Apply recommended excludes for generated Flutter files."
        },
        "flutterWise.appliedFilesExclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "scope": "resource",
          "description": "Tracks which files.exclude globs were added by Flutter Wise."
        },
        "flutterWise.appliedSearchExclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "scope": "resource",
          "description": "Tracks which search.exclude globs were added by Flutter Wise."
        },
        "flutterWise.useIconTheme": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Use Flutter Wise icon theme when initializing the workspace."
        },
        "flutterWise.preferredIconThemeId": {
          "type": "string",
          "default": "flutter-wise-icons",
          "scope": "resource",
          "description": "Icon theme id to apply on initialization."
        },
        "flutterWise.previousIconTheme": {
          "type": "string",
          "default": "",
          "scope": "window",
          "description": "Stores the prior icon theme so Flutter Wise can restore it on undo."
        }
      }
    },
    "capabilities": {
      "virtualWorkspaces": true,
      "untrustedWorkspaces": {
        "supported": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
